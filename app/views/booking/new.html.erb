<h1>New reservation</h1>
<%= notice %>
<%= form_for :booking, url:{controller: 'booking', action: 'create', hotel_id: @hotel.id} do |f| %>
  <p>
    <%= f.label :Check_in_date %>
    <%= f.datetime_field :check_in_date%>
  </p>

  <p>
    <%= f.label :Total_days%>
    <%= f.number_field :number_of_days%>
  <p>
  <p>
    <%= f.label :Total_number_of_rooms%>
    <%= f.number_field :number_of_rooms%>
  <p>
  <p>
    <%= f.label :number_of_children%>
    <%= f.number_field :number_of_children%>
  </p>
  <p>
    <%= f.label :number_of_guest%>
    <%= f.number_field :number_of_guest%>
  </p>
  <dp>
    <%= f.submit %>
  </p>
<% end %>